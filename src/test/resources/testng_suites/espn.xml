<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="ESPN Test Suite">
    <test name="Desktop Tests">
        <groups>
            <run>
                <include name="desktop"/>
            </run>
        </groups>
        <classes>
            <class name="com.laba.solvd.homework.ESPNTest"/>
        </classes>
    </test>

    <test name="Mobile Tests">
        <groups>
            <run>
                <exclude name="desktop"/>
            </run>
        </groups>
        <classes>
            <class name="com.laba.solvd.homework.ESPNTest"/>
        </classes>
    </test>
</suite>